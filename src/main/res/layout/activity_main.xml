<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#F3A68E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="69dp"
            android:onClick="clickFunction"
            android:text="GUESS"
            android:textSize="30sp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:layout_alignTop="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_marginStart="-122dp"
            android:layout_marginTop="-299dp"
            android:layout_marginBottom="310dp"
            android:layout_marginEnd="204dp"

            android:onClick="clickFunction1"
            android:text="1" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:layout_alignTop="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_marginStart="-39dp"
            android:layout_marginTop="-299dp"
            android:layout_marginEnd="119dp"
            android:layout_marginBottom="310dp"
            android:onClick="clickFunction2"
            android:text="2" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:layout_alignTop="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="42dp"
            android:layout_marginTop="-299dp"
            android:layout_marginBottom="310dp"

            android:onClick="clickFunction3"
            android:text="3" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:layout_alignTop="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_marginStart="116dp"
            android:layout_marginTop="-299dp"
            android:layout_marginEnd="-36dp"
            android:layout_marginBottom="310dp"

            android:onClick="clickFunction4"
            android:text="4" />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:layout_alignTop="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_marginStart="192dp"
            android:layout_marginEnd="-113dp"
            android:layout_marginTop="-299dp"
            android:layout_marginBottom="310dp"
            android:onClick="clickFunction5"
            android:text="5" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:layout_alignTop="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_marginStart="-47dp"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="-47dp"
            android:layout_marginBottom="-33dp"
            android:text="Press the Guess button to start game" />

        <Button
            android:id="@+id/buttonNextGame"
            android:layout_width="159dp"
            android:layout_height="67dp"
            android:layout_alignStart="@+id/button"
            android:layout_alignTop="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="123dp"
            android:layout_marginEnd="-8dp"
            android:layout_marginBottom="-130dp"
            android:text="Advance to Next Game" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>